main
  .login-card
    h3.text-center.mb-4 Management Login
    form(action="/login", method="post")
      input.form-control(type="email", name="email", placeholder="Email address", required)
      input.form-control(type="password", name="password", placeholder="Password", required)
      .d-flex.justify-content-between.align-items-center.mb-3
        div
          input#rememberMe(type="checkbox", name="rememberMe")
          label(for="rememberMe") Remember me
        a.text-decoration-none(href="#") Forgot password?
      button.btn.btn-primary.w-100 Login
      .text-center.mt-3
        small
          | Don't have an account? 
          a(href="#") Register

