extends layout

block content
  .container
    .card(style="margin-top: 20px")
      h2 Edit Sale
      form(action=`/editsale/${sale._id}`, method="post")
        label Customer Name
        input(type="text", name="customername", value=sale.customername)

        label Product
        input(type="text", name="product", value=sale.product)

        label Quantity
        input(type="number", name="quantity", value=sale.quantity)

        label Unit Price
        input(type="number", step="0.01", name="price", value=sale.price)

        label Transport Required?
        select(name="transport")
          option(value="no", selected=sale.transport==="no") No
          option(value="yes", selected=sale.transport==="yes") Yes (+5%)

        label Payment Type
        select(name="paymentMethod")
          option(value="cash", selected=sale.paymentMethod==="cash") Cash
          option(value="mobile", selected=sale.paymentMethod==="mobile") Mobile Money
          option(value="bank", selected=sale.paymentMethod==="bank") Bank Transfer

        button(type="submit") Update Sale
