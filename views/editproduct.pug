extends layout

block content
  h1 Edit Product

  form(action=`/ecommerce/product/edit/${product._id}` method="POST" enctype="multipart/form-data")
    .form-group
      label(for="name") Product Name
      input#name(type="text" name="name" value=product.name required)

    .form-group
      label(for="price") Price
      input#price(type="number" name="price" value=product.price required)

    .form-group
      label(for="image") Product Image
      input#image(type="file" name="image" accept="image/*")

    button(type="submit") Update Product
