    title Suppliers - Mayondo Wood And Furniture
    link(rel="stylesheet", href="/CSS/suppliers.css")

  body
    // Navbar
    header.navbar
      .brand
        a(href="/")
          img(src="/Images/mayondo logo.png", alt="Company Logo")
        h2 Mayondo Wood And Furniture
      nav.nav-links
        a(href="/saleslist") Sales
        a(href="/stafflist") Register
        .dropdown
          a(href="/analytic") Reports â–¼
          .dropdown-content
            a(href="/accounting") Accounting
            a(href="/stafflist") Staff
            a(href="/suppliers") Suppliers
        a(href="/stockreport") Stock
        if user
          a.btn-logout(href="/logout") Logout

    // Main content
    main.container
      .card
        .card-header
          h2 Suppliers List

        // Suppliers Table
        table#suppliersTable
          thead
            tr
              th Supplier
              th Email
              th Contact
              th Products
              th Actions
          tbody
            if suppliers.length
              each supplier in suppliers
                tr
                  td= supplier.supplierName || "N/A"
                  td= supplier.supplierEmail || "N/A"
                  td= supplier.supplierContact || "N/A"
                  td= supplier.products && supplier.products.length ? supplier.products.join(", ") : "N/A"
                  td
                    button.edit-btn.action-btn(
                      type="button",
                      onclick=`editSupplier('${supplier._id}')`
                    ) Edit
                    button.delete-btn.action-btn(
                      type="button",
                      onclick=`showDeleteConfirmation('${supplier._id}', '${supplier.supplierName || 'Unknown'}', 'supplier')`
                    ) Delete
            else
              tr
                td(colspan="5") No suppliers found.

