h1 In-Production
.container
  //  Production Schedule 
  .card
    h2 Production Schedule
    table
      tbody
        tr
          th Product
          th Start Date
          th End Date
        tr
          td Chair
          td 2025-09-05
          td 2025-09-07
        tr
          td Table
          td 2025-09-06
          td 2025-09-10
        tr
          td Wardrobe
          td 2025-09-08
          td 2025-09-12
  //  Task Assignment 
  .card
    h2 Task Assignment
    table#taskTable
      tbody
        tr
          th Task
          th Assigned To
          th Status
        tr
          td Cutting
          td John
          td
            select(onchange="updateTaskStatus(this)")
              option Pending
              option In Progress
              option Completed
        tr
          td Assembling
          td Mary
          td
            select(onchange="updateTaskStatus(this)")
              option Pending
              option In Progress
              option Completed
        tr
          td Finishing
          td Paul
          td
            select(onchange="updateTaskStatus(this)")
              option Pending
              option In Progress
              option Completed
  //  Work-In-Progress Tracking 
  .card
    h2 Work-in-Progress (WIP)
    div
      p Chair Assembly
      input(type="range", min="0", max="100", value="60", oninput="updateProgress(this, \'chair\')")
      .progress-bar
        .progress#chair(style="width:60%;")
      p Table Cutting
      input(type="range", min="0", max="100", value="40", oninput="updateProgress(this, \'table\')")
      .progress-bar
        .progress#table(style="width:40%;")
      p Wardrobe Finishing
      input(type="range", min="0", max="100", value="20", oninput="updateProgress(this, \'wardrobe\')")
      .progress-bar
        .progress#wardrobe(style="width:20%;")
