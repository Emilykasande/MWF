      a(href="accounting.html") Accounting ▼
      .dropdown-content
        a(href="reports.html") Reports
        a(href="expenses.html") Expenses
        a(href="cashflow.html") Cash Flow
    a(href="store.html") E-commerce
    .search-box
      input(type="text", placeholder="Search...")
      button Go

.container
  h2 Update Product Price & Stock
  form#priceStockForm
    label(for="product") Select Product
    input#product(type="text", placeholder="Product name", required)

    label(for="newPrice") New Sale Price
    input#newPrice(type="number", required, min="0")

    label(for="newStock") New Stock Quantity
    input#newStock(type="number", required, min="0")

    button(type="submit") Update Product

  h2 Current Products, Prices & Stock
  table#productTable
    thead
      tr
        th Product
        th Type
        th Current Price
        th Current Stock
    tbody

